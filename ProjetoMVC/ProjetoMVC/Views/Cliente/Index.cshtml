@model List<Cliente>
@{
    ViewData["Title"] = "Clientes - Lista";
    var nome = ViewBag.Nome as string ?? "";
}

<h1>Lista de Clientes</h1>

<form asp-action="Index" method="post" class="row g-2 align-items-center mb-3 mt-4 justify-content-end">
    <div class="col-auto">
        <div class="form-floating">
            <input name="nome" class="form-control" id="nome" placeholder="Cliente" style="width: 200px;" />
            <label for="nome">Cliente</label>
        </div>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-login bg-black text-white" style="padding: 1rem .75rem;">Pesquisa</button>
    </div>
</form>
@if (!string.IsNullOrWhiteSpace(nome))
{
    <p class="justify-content-end">Pesquisado: @nome</p>
}
@if (Model == null || !Model.Any())
{
    <table class="table table-striped">
        <tr>
            <td>Não foram encontrados dados</td>
        </tr>
    </table>
}
else 
{
    <table class="table table-striped table-hover">
    <thead>
        <tr class="bg-black text-light">
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Telefone</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.nome</td>
                <td>@cliente.email</td>
                <td>@cliente.telefone</td>
            </tr>
        }
    </tbody>
    </table>
}

