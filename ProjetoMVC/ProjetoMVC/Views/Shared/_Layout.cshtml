<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoMVC.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column" style="min-height: 100vh;">
    <div class="container-fluid d-flex flex-column flex-grow-1">
        <nav class="col-md-3 col-lg-2 bg-light sidebar d-flex flex-column" style="width: 16.6%; position: fixed; top: 0; left: 0; height: 100%;">
            <div class="flex-grow-1">
                <a class="navbar-brand d-block text-center mb-0 text-light fw-bold text-decoration-none bg-black me-0 fs-4 text-wrap"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    ProjetoMVC
                </a>
                <ul class="nav flex-column">
                    <li class="list-group-item list-group-item-action">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                            Privacy
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="sobreNos">
                            Sobre Nós
                        </a>
                    </li>
                    <li class="list-group-item list-group-item-action">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="contactos">
                            Contactos
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Conteúdo Principal -->
        <main class="col-md-9 ms-auto col-lg-10 px-md-4" style="margin-left: 16.6%; flex-grow: 1;">
            <div class="container mt-4">
                @RenderBody()
            </div>
        </main>
    </div>

    <!-- Footer (Ajuste automático) -->
    <footer class="border-top footer text-muted d-flex align-items-center bg-black" style="height: 5rem; margin-top: auto;">
        <div class="container text-center">
            &copy; 2025 - ProjetoMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
